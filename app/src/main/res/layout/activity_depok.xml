<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ticketing.Cinema">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/map">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_200"
            android:inputType="none"
            android:text="DEPOK"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/cinere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:padding="16dp"
                android:text="CINERE"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/cinere"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/cibel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:padding="16dp"
                android:text="CINERE BELLEVUE XXI"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cinere" />

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/cibel"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/depok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:padding="16dp"
                android:text="DEPOK XXI"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cibel" />

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/depok"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/demall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:padding="16dp"
                android:text="DEPOK MALL XXI"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/depok" />

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/demall"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/detos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:padding="16dp"
                android:text="DEPOK TOWN SQUARE XXI"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/demall" />

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/detos"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/margo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:padding="16dp"
                android:text="MARGO CITY XXI"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detos" />

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/margo"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/margoimax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:padding="16dp"
                android:text="MARGO CITY IMAX"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/margo" />

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/margoimax"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/margoprem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:padding="16dp"
                android:text="MARGO CITY PREMIERE"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/margoimax" />

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/margoprem"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/pesonaprem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:padding="16dp"
                android:text="PESONA SQUARE PREMIERE"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/margoprem" />

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/pesonaprem"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/pesona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:padding="16dp"
                android:text="PESONA SQUARE XXI"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pesonaprem" />

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/pesona"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/thepark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:padding="16dp"
                android:text="THE PARK SAWANGAN XXI"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pesona" />

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/thepark"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/tsm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:padding="16dp"
                android:text="TSM CIBUBUR XXI"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thepark" />

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/tsm"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/tsmprem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"
                android:padding="16dp"
                android:text="TSM CIBUBUR PREMIERE"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tsm" />

            <!-- Garis pemisah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@+id/tsmprem"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FEFAFD"
                app:layout_constraintBottom_toBottomOf="@+id/cibel"
                app:layout_constraintTop_toTopOf="@+id/cibel"
                tools:layout_editor_absoluteX="311dp"
                android:onClick="goToCinemaSelect"
                android:background="@drawable/history_selector"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginLeft="37px"
            android:layout_marginRight="20px"
            android:backgroundTint="#00FFFFFF"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.006"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/homeputih"
            android:onClick="goToHome"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginRight="30px"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/cinema_purple"
            tools:layout_editor_absoluteX="92dp"
            android:onClick="goToCinema"/>

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginRight="20px"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.566"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/upcoming"
            android:onClick="goToUpcoming"/>

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.847"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/setting"
            android:onClick="goToSetting"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>