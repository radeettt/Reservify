<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Setting.Setting">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@drawable/bg_purple"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:padding="16dp">
            </ImageView>

            <!-- Judul Halaman -->
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Setting"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:fontFamily="@font/poppins_bold"/>

            <!-- Card Profile -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewProfile"
                android:layout_below="@id/textViewTitle"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Foto Profil -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/myself"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/profpic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="30dp">

                        <!-- Nama -->
                        <TextView
                            android:id="@+id/textViewName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Max Verstappen"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_bold"/>

                        <!-- Email -->
                        <TextView
                            android:id="@+id/textViewEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="maxver@gmail.com"
                            android:textSize="16sp"
                            android:textColor="#888888"
                            android:fontFamily="@font/poppins_medium"/>

                        <!-- Button Profile Information -->
                        <Button
                            android:id="@+id/buttonProfileInfo"
                            android:layout_width="185dp"
                            android:layout_height="40dp"
                            android:text="Profile Information"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:background="@drawable/button_information"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Opsi Pengaturan: Language -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Language"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_below="@id/cardViewProfile"
                android:id="@+id/textViewLanguage"
                android:fontFamily="@font/poppins_medium"
                android:drawableRight="@drawable/arrow_right"/>

            <!-- Garis pemisah -->
            <View
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_below="@id/textViewLanguage"
                android:layout_centerHorizontal="true"/>

            <!-- Opsi Pengaturan: Purchase History -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purchase History"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_below="@id/textViewLanguage"
                android:id="@+id/textViewPurchaseHistory"
                android:fontFamily="@font/poppins_medium"
                android:drawableRight="@drawable/arrow_right"/>

            <!-- Garis pemisah -->
            <View
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_below="@id/textViewPurchaseHistory"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_below="@id/textViewPurchaseHistory"
                android:id="@+id/textViewContact"
                android:fontFamily="@font/poppins_medium"
                android:drawableRight="@drawable/arrow_right"/>

            <!-- Garis pemisah -->
            <View
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_below="@id/textViewContact"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FAQ and Tutorial"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_below="@id/textViewContact"
                android:id="@+id/textViewFAQ"
                android:fontFamily="@font/poppins_medium"
                android:drawableRight="@drawable/arrow_right"/>

            <!-- Garis pemisah -->
            <View
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_below="@id/textViewFAQ"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms and Privacy"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_below="@id/textViewFAQ"
                android:id="@+id/textViewTerms"
                android:fontFamily="@font/poppins_medium"
                android:drawableRight="@drawable/arrow_right"/>

            <!-- Garis pemisah -->
            <View
                android:layout_width="380dp"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_below="@id/textViewTerms"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textColor="#FF0000"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_below="@id/textViewTerms"
                android:id="@+id/textViewLogout"
                android:fontFamily="@font/poppins_medium"
                android:drawableRight="@drawable/btn_logout"
                android:background="@drawable/logout_selector"
                android:onClick="goToLogin"/>

            <Button
                android:id="@+id/button_purchasehistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textViewPurchaseHistory"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/history_selector"
                android:onClick="gotohistory"
            />

        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginLeft="37px"
            android:layout_marginRight="20px"
            android:backgroundTint="#00FFFFFF"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.006"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/home"
            android:onClick="goToHome"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginRight="30px"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/cinema"
            tools:layout_editor_absoluteX="92dp"
            android:onClick="goToCinema"/>

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginRight="20px"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.566"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/upcoming"
            android:onClick="goToUpcoming"/>

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.847"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/setting_purple" />
    </LinearLayout>
</RelativeLayout>